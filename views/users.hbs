<div id='page-wrapper'>
	<!-- /.col-lg-12 -->
	<div class='row'>
		<div class='col-lg-12'>
			<div class='header-bar page-header'>
				<h1 class='page-header text-gray-800'>User List</h1>
				<a class='header-bar__btn btn btn-success' href='/admin/users/create'><i
						class='fa fa-plus'
					></i>
					Create new user</a>
			</div>

		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
	<div class='row'>
		<div class='col-lg-12'>
			<div class='panel panel-default'>
				<div class='panel-heading'>
					DataTables Advanced Tables
				</div>
				<!-- /.panel-heading -->
				<div class='panel-body'>
					<div class='sort'>
						<div class='col-sm-6'>
							<div class='dataTables_length' id='dataTables-example_length'>
								<label class='label'>Show
									<select
										name='dataTables-example_length'
										aria-controls='dataTables-example'
										class='form-control form-format input-sm'
									>
										<option value='10'>10</option>
										<option value='25'>25</option>
										<option value='50'>50</option>
										<option value='100'>100</option>
									</select>
									entries
								</label>
							</div>
						</div>
						<div class='col-sm-6'>
							<div id='dataTables-example_filter' class='dataTables_filter'>
								<label class='label'>Search:
									<input
										type='search'
										class='form-control form-format input-sm'
										placeholder=''
										aria-controls='dataTables-example'
									/>
								</label>
							</div>
						</div>
					</div>
					<table width='100%' class='table table-striped table-bordered' id='dataTables-example'>
						<thead>
							<tr>

								{{!-- <th>ID</th>
								<th>Avatar</th>
								<th>First Name</th>
								<th>Last Name</th>
								<th>DoB</th>
								<th>Email</th>
								<th>Role</th> --}}

								<th>ID {{{sortable '_id' _sort}}}</th>
								<th>Avatar</th>
								<th>First Name {{{sortable 'firstName' _sort}}}</th>
								<th>Last Name {{{sortable 'lastName' _sort}}}</th>
								<th>DoB {{{sortable 'dob' _sort}}}</th>
								<th>Email {{{sortable 'email' _sort}}}</th>
								<th>Role {{{sortable 'role' _sort}}}</th>

							</tr>
						</thead>
						<tbody>

							{{#each users}}
								<tr>
									<td>
										<a
											class='btn btn-link text-left'
											data-toggle='collapse'
											data-target='#toggleCollapse'
										>
											<i class='fas fa-plus-circle'></i>
										</a>
										{{_id}}
									</td>
									<td class='text-center'><img
											src='{{avatar}}'
											alt='{{firstName}} {{lastName}}'
											width='50'
											height='50px'
										/></td>
									<td>{{firstName}}</td>
									<td>{{lastName}}</td>
									<td>{{generateDate date 'L'}}</td>
									<td>{{email}}</td>
									<td>{{role}}</td>
								</tr>

								<tr class='collapse' id='toggleCollapse' aria-hidden='true'>
									<td class='child' colspan='8'>
										<ul class='child-list' data-dtr-index='0'>
											<li data-dtr-index='8'>
												<span class='dtr-title'>Phone Number:</span>
												<span class='dtr-data'>{{phoneNumber}}</span>
											</li>
											<li data-dtr-index='9'>
												<span class='dtr-title'>Username:</span>
												<span class='dtr-data'>{{username}}</span>
											</li>
											<li data-dtr-index='10'>
												<span class='dtr-title'>Gender:</span>
												<span class='dtr-data'>{{gender}}</span>
											</li>
											<li data-dtr-index='11'>
												<span class='dtr-title'>Zip Code:</span>
												<span class='dtr-data'>{{zipcode}}</span>
											</li>
											<li data-dtr-index='12'>
												<span class='dtr-title'>Country:</span>
												<span class='dtr-data'>{{country}}</span>
											</li>
										</ul>
									</td>
								</tr>

							{{/each}}

						</tbody>
					</table>
					<!-- /.table-responsive -->
				</div>
				<!-- /.panel-body -->
				<div class='row'>
					<div class='col-sm-4'>
						<div
							class='dataTables_info'
							id='dataTables-example_info'
							role='status'
							aria-live='polite'
						>
							Showing 0 to 0 of
							{{users.length}}
							entries
						</div>
					</div>
					<div class='col-sm-8'>
						<nav aria-label='...'>
							<ul class='pagination'>
								<li class='page-item disabled'>
									<a class='page-link' href='#' tabindex='-1' aria-disabled='true'>Previous</a>
								</li>
								<li class='page-item'><a class='page-link' href='#'>1</a></li>
								<li class='page-item active' aria-current='page'>
									<a class='page-link' href='#'>2</a>
								</li>
								<li class='page-item'><a class='page-link' href='#'>3</a></li>
								<li class='page-item'>
									<a class='page-link' href='#'>Next</a>
								</li>
							</ul>
						</nav>
					</div>
				</div>
			</div>
			<!-- /.panel -->
		</div>
		<!-- /.col-lg-12 -->
	</div>

</div>
<!-- /#page-wrapper -->
