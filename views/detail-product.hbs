<div id='page-wrapper'>

	<ol class='breadcrumb'>
		<li><a href='/products'>Products</a></li>&nbsp;/&nbsp;
		<li class='active'>Italy Bag</li>
	</ol>
	<div class='row'>
		<div class='col-lg-12'>
			<h1 class='page-header'>Italy Bag</h1>
			<hr />
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
	<div class='row'>
		<div class='col-lg-12'>
			<div class='panel panel-default'>
				<div class='panel-heading'>Product detail</div>
				<div class='panel-body'>
					<form class='form-horizontal' action='/products/{{product._id}}?_method=PUT' method='POST'>
						<div class='form-group row'>
							<label class='col-sm-2 control-label'>Name</label>
							<div class='col-sm-10'>
								<input type='text' class='form-control' name='name' value={{product.name}} />
							</div>
						</div>
						<div class='form-group row'>
							<label class='col-sm-2 control-label'>Image</label>
							<div class='col-sm-10'>
								<img src={{product.image}} alt={{product.name}} />
							</div>
						</div>
						<div class='form-group row'>
							<label class='col-sm-2 control-label'>Thumbnail</label>
							<div class='col-sm-10'>
								<img src={{product.thumbnail}} alt={{product.name}} width='100' />
							</div>
						</div>
						<div class='form-group row'>
							<label class='col-sm-2 control-label'>Description</label>
							<div class='col-sm-10'>
								<textarea
									class='form-control'
									name='shortDescription'
									cols='30'
									rows='3'
								>{{product.shortDescription}}</textarea>
							</div>
						</div>
						<div class='form-group row'>
							<label class='col-sm-2 control-label'>Category</label>
							<div class='col-sm-10'>
								<select class='form-control' name='category'>
									<option
										selected='selected'
										value={{product.categoryId}}
									>{{product.categoryId}}</option>
									<option value='women'>women</option>
									<option value='accessories'>accessories</option>
									<option value='men'>men</option>
								</select>
							</div>
						</div>
						<div class='form-group row'>
							<label class='col-sm-2 control-label'>Sale Price</label>
							<div class='col-sm-10'>
								<div class='input-group'>
									<span class='input-group-addon'>$</span>
									<input
										type='text'
										class='form-control'
										name='salePrice'
										value={{product.salePrice}}
									/>
								</div>
							</div>
						</div>
						<div class='form-group row'>
							<label class='col-sm-2 control-label'>Original Price</label>
							<div class='col-sm-10'>
								<div class='input-group'>
									<span class='input-group-addon'>$</span>
									<input
										type='text'
										class='form-control'
										name='originalPrice'
										value={{product.originalPrice}}
									/>
								</div>
							</div>
						</div>
						<div class='form-group row'>
							<label class='col-sm-2 control-label'>Images</label>
							<div class='col-sm-10'>
								{{#each product.images}}
									<img src={{this}} width='100' />
								{{/each}}
							</div>
						</div>
						<div class='form-group row'>
							<label class='col-sm-2 control-label'>Thumbnails</label>
							<div class='col-sm-10'>
								{{#each product.thumbnails}}
									<img src={{this}} width='100' />
								{{/each}}
							</div>
						</div>
						<div class='form-group'>
							<div class='col-sm-2 control-label'>
								<button type='submit' class='btn btn-primary'>Update</button>
							</div>
						</div>
					</form>
				</div>
			</div>

		</div>
		<!-- /.col-lg-12 -->
	</div>

</div>
